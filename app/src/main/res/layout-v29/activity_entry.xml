<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/preLightBlack"
    android:forceDarkAllowed="false"
    android:layoutDirection="ltr"
    tools:context="com.scrappers.vitalwatch.screen.EntryScreen">
    <FrameLayout
        android:id="@+id/layoutHolder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center|bottom">
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:elevation="100dp"
            android:layout_marginBottom="20dp"
            android:padding="10dp"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="@color/blackCat"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/pairingScreenLauncher"
                android:layout_height="match_parent"
                android:layout_width="40dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="15dp"
                android:padding="5dp"
                android:tooltipText="@string/connect"
                android:src="@drawable/ic_baseline_bluetooth_searching_24"
                android:tint="@color/blue"
                tools:targetApi="o" />
            <ImageView
                android:id="@+id/vitalScreenLauncher"
                android:layout_height="match_parent"
                android:layout_width="40dp"
                android:layout_marginEnd="15dp"
                android:padding="5dp"
                android:tooltipText="@string/vitals"
                android:src="@drawable/mat_heart"
                tools:targetApi="o" />
            <ImageView
                android:layout_height="match_parent"
                android:layout_width="40dp"
                android:layout_marginEnd="15dp"
                android:padding="5dp"
                android:tooltipText="@string/user_visibility"
                android:src="@drawable/ic_baseline_groups_24"
                tools:targetApi="o" />
            <ImageView
                android:layout_height="match_parent"
                android:layout_width="40dp"
                android:layout_marginEnd="15dp"
                android:padding="5dp"
                android:tooltipText="@string/settings"
                android:src="@drawable/ic_baseline_settings_24"
                tools:targetApi="o" />
            <ImageView
                android:layout_height="match_parent"
                android:layout_width="40dp"
                android:layout_marginEnd="5dp"
                android:padding="5dp"
                android:tooltipText="@string/about"
                android:src="@drawable/ic_baseline_info_24"
                tools:targetApi="o" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>